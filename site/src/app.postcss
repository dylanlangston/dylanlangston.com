@tailwind base;
@tailwind components;
@tailwind utilities;

input,
textarea,
button,
select,
a {
	-webkit-tap-highlight-color: transparent;
}

html {
	/* background-color: theme(colors.blue-dark); */
	background-repeat: repeat;
	height: 100%;
	box-sizing: border-box;
}

body {
	min-height: 100vh;
  	display: flex;
  	flex-direction: column;
}

main {
  flex: 1;
}

